-- 폴더 생성
cd boiler-plate

-- npm init
npm init

--  express 설치 
npm install express --save

--  npm 시작
npm run start

-- 로컬 확인 
http://localhost:5000/

-- mongoose 설치
npm install mongoose --save

-- git 버젼
git --version

-- git 초기화
git init

-- git 상태보기
git status

-- gitignore 생성
.gitignore   만들기  
node_modules 내용 추가 

-- 캐시 지우기
git rm --cached node_modules -r
git add . <- gitignore 만들기 전에 실행한경우 캐시지워야함

-- commit  m <- 메시지 작성
git commit -m "처음 저장소에 올림"

-- ssh 설치
Generating a new SSH key and adding it to the ssh-agent  검색 
1> Open Git Bash.
2> ssh-keygen -t ed25519 -C "rovo486@gmail.com"
3> eval `ssh-agent -s`
4> ssh-add ~/.ssh/id_ed25519
5> clip < ~/.ssh/id_ed25519.pub    <-- 클립보드에 복사됨

-- githup 에서 ssh 생성
우측 setting > SSH and GPG keys > new SSH key > key 붙여넣기 

-- githup 연결
git add README.md
git remote add origin https://github.com/rovo486/boiler-plate.git
git branch -M main
git push -u origin main

-- body-parser dependency  설치
npm install body-parser --save

-- nodemon  설치
npm install nodemon --save-dev

-dev 옵션 넣어주면 package.json ->devDependencies 로 들어간다

-- 암호화 
npm install bcrypt --save

-- 몽고db 메뉴
cloud.mongodb.com
Clusters > boilerplate > Collections 조회 


// mongodb rovo486 , basic99
// mongodb+srv://rovo486:<password>@boilerplate.k1xlm.mongodb.net/myFirstDatabase?retryWrites=true&w=majority 

-- json웹토큰 
npm install jsonwebtoken --save

-- 쿠키parser
npm install cookie-parser --save

